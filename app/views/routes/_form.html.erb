<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= f.label :schedule %><br>
    <%= f.text_field :schedule, :required => true %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
<!--    <%= f.text_field :color, :required => true %>-->
      <%= f.select :color, options_for_select([['verde','#04B404'],['azul','#0000FF'],['rosa','#FA58F4'],['amarillo','#FFFF00'],['rojo','#FF0000'],['lila','#BF00FF'],['morado','#8904B1'],['celeste','#2E9AFE'],['verde claro','#58FA58'],['naranja','#FE642E'],['cafe','#8A4B08'],['verde oscuro','#006400']]) %>
      
 
  </div>
  <div class="field">
    <%= f.label :waste_picker %><br />
    <%= f.collection_select(:waste_picker_id, @waste_pickers, :id, :name, :include_blank => "Please select") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
